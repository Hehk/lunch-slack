{
  "name": "lunch-slack",
  "version": "0.1.0",
  "scripts": {
    "build": "bsb -make-world && webpack --mode production",
    "clean": "bsb -clean-world && rm -rf dist",
    "start": "node dist/slack.js",
    "dev": "micro-dev src/app.js",
    "bsb": "bsb -make-world -w",
    "test": "ava",
    "atdgen": "scripts/gen-atd"
  },
  "keywords": [
    "BuckleScript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.25.0",
    "bs-platform": "^4.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "micro-dev": "^3.0.0",
    "prettier": "^1.15.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@ahrefs/bs-atdgen-codec-runtime": "^1.1.0",
    "@sentry/node": "^4.2.4",
    "bs-fetch": "^0.3.1",
    "bs-json": "^1.0.1",
    "dotenv": "^6.1.0",
    "firebase": "^5.7.2",
    "isomorphic-fetch": "^2.2.1",
    "micro": "^9.3.3",
    "reason-future": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "lib/**/*_test.bs.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js|json}": [
      "prettier",
      "git add"
    ],
    "*.{re|rei}": [
      "refmt --in-place",
      "git add"
    ]
  }
}
